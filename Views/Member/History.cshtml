@model List<GenLibrary.Dtos.CheckoutHistoryDto>

@{
    ViewData["Title"] = "Checkout History";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock-history"></i> Checkout History</h2>
        <a href="@Url.Action("MyBooks", "Member")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to My Books
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox fs-1 text-muted"></i>
            <p class="mt-3 text-muted">You haven't returned any books yet.</p>
            <a href="@Url.Action("Index", "Books")" class="btn btn-primary">Browse Books</a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <strong>Previously Borrowed Books</strong>
                <span class="badge bg-secondary ms-2">@Model.Count total</span>
            </div>
            <div class="card-body">
                <table id="historyTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Book Title</th>
                            <th>Barcode</th>
                            <th>Checkout Date</th>
                            <th>Due Date</th>
                            <th>Returned Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.BookTitle</strong></td>
                                <td><code>@item.Barcode</code></td>
                                <td>@item.CheckoutDate.ToString("MMM dd, yyyy")</td>
                                <td>@item.DueDate.ToString("MMM dd, yyyy")</td>
                                <td>@item.ReturnDate?.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (item.WasOverdue)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-triangle"></i> Was Overdue
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Returned On Time
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#historyTable').DataTable({
                pageLength: 10,
                ordering: true,
                responsive: true,
                order: [[4, 'desc']]
            });
        });
    </script>
}
