@model GenLibrary.ViewModels.BooksViewModel

@{
    ViewData["Title"] = "Browse Books";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-search"></i> Browse Books</h2>

    <!-- Filter Card -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" asp-action="BrowseBooks" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" name="title" value="@Model.Title" placeholder="Search title...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">ISBN</label>
                    <input type="text" class="form-control" name="isbn" value="@Model.ISBN" placeholder="Search ISBN...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Author</label>
                    <input type="text" class="form-control" name="author" value="@Model.Author" placeholder="Search author...">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="availableOnly" value="true" @(Model.AvailableOnly ? "checked" : "")>
                        <label class="form-check-label">Available Only</label>
                    </div>
                </div>
                <div class="col-md-3 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a asp-action="BrowseBooks" class="btn btn-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Books Table -->
    <table id="browseBooksTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Authors</th>
                <th>ISBN</th>
                <th>Published</th>
                <th>Available</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td><strong>@book.Title</strong></td>
                    <td>@book.Authors</td>
                    <td>@book.ISBN</td>
                    <td>@book.PublishedYear</td>
                    <td class="@(book.AvailableCopies > 0 ? "text-success fw-bold" : "text-danger fw-bold")">
                        @book.AvailableCopies / @book.TotalCopies
                    </td>
                    <td>
                        @if (book.AvailableCopies > 0)
                        {
                            <a href="@Url.Action("Checkout", "Member", new { bookId = book.BookId })" class="btn btn-success btn-sm">
                                <i class="bi bi-cart-plus"></i> Checkout
                            </a>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Not Available</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#browseBooksTable').DataTable({
                pageLength: 10,
                ordering: true,
                responsive: true
            });
        });
    </script>
}
