@model List<GenLibrary.Dtos.BookCopyDetailedDto>

@{
    ViewData["Title"] = "Book Copies";
    var bookTitle = ViewBag.BookTitle as string;
}

<h2>@bookTitle</h2>

<table id="copiesTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Barcode</th>
            <th>Condition</th>
            <th>Status</th>
            <th>Borrowed By</th>
            <th>Due Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var copy in Model)
        {
            <tr>
                <td>@copy.Barcode</td>
                <td>@copy.Condition</td>
                <td>@copy.StatusName</td>
                <td>@copy.UserFullName</td>
                <td>@(copy.DueDate?.ToString("yyyy-MM-dd") ?? "")</td>
                <td>
                    <button class="btn btn-secondary btn-sm">Action</button>
                </td>
            </tr>
        }
    </tbody>
</table>
