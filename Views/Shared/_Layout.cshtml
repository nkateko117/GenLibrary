<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GenLibrary</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GenLibrary.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <!-- DataTables CSS (centralized) -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (User.IsInRole("Librarian"))
                {
                    <a class="navbar-brand" asp-controller="Librarian" asp-action="Dashboard">
                        <i class="bi bi-book-half"></i> GenLibrary
                    </a>
                }
                else if (User.IsInRole("Member"))
                {
                    <a class="navbar-brand" asp-controller="Member" asp-action="MyBooks">
                        <i class="bi bi-book-half"></i> GenLibrary
                    </a>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Books" asp-action="Index">
                        <i class="bi bi-book-half"></i> GenLibrary
                    </a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">
                                <i class="bi bi-book"></i> Books
                            </a>
                        </li>

                        @if (User.IsInRole("Librarian"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-badge"></i> Librarian
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Librarian" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Librarian" asp-action="ManageBooks"><i class="bi bi-book"></i> Manage Books</a></li>
                                    <li><a class="dropdown-item" asp-controller="Librarian" asp-action="Checkouts"><i class="bi bi-list-check"></i> All Checkouts</a></li>
                                    <li><a class="dropdown-item" asp-controller="Librarian" asp-action="Returns"><i class="bi bi-box-arrow-in-left"></i> Process Returns</a></li>
                                    <li><a class="dropdown-item" asp-controller="Librarian" asp-action="Overdue"><i class="bi bi-exclamation-triangle text-danger"></i> Overdue Books</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Librarian" asp-action="Members"><i class="bi bi-people"></i> Members</a></li>
                                    <li><a class="dropdown-item" asp-controller="Librarian" asp-action="CheckoutBook"><i class="bi bi-plus-circle"></i> New Checkout</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Member"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person"></i> My Account
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Member" asp-action="MyBooks"><i class="bi bi-book-fill"></i> My Books</a></li>
                                    <li><a class="dropdown-item" asp-controller="Member" asp-action="History"><i class="bi bi-clock-history"></i> History</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Member" asp-action="BrowseBooks"><i class="bi bi-search"></i> Browse & Checkout</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                    @if (User.IsInRole("Librarian"))
                                    {
                                        <span class="badge bg-primary">Librarian</span>
                                    }
                                    else if (User.IsInRole("Member"))
                                    {
                                        <span class="badge bg-success">Member</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dark">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GenLibrary
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS (centralized) -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
