@model List<GenLibrary.Dtos.LibrarianCheckoutDto>

@* Reusable checkout table partial for librarian views *@
<table class="table table-striped table-bordered checkoutTable" style="width:100%">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Barcode</th>
            <th>Member</th>
            <th>Checkout Date</th>
            <th>Due Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var checkout in Model)
        {
            <tr class="@(checkout.IsOverdue ? "table-danger" : "")">
                <td>@checkout.BookTitle</td>
                <td><code>@checkout.Barcode</code></td>
                <td>
                    @checkout.MemberName
                    <br /><small class="text-muted">@checkout.MemberEmail</small>
                </td>
                <td>@checkout.CheckoutDate.ToString("MMM dd, yyyy")</td>
                <td>@checkout.DueDate.ToString("MMM dd, yyyy")</td>
                <td>
                    @if (checkout.IsOverdue)
                    {
                        <span class="badge bg-danger">Overdue</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@checkout.DaysLeft days left</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
