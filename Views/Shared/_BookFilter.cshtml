@model GenLibrary.ViewModels.BooksViewModel?

@* Views/Shared/_BookFilter.cshtml *@
<div class="card mb-3">
    <div class="card-body">
        <form id="bookFilterForm" method="get" asp-controller="Books" asp-action="Index" class="row g-3">

            <div class="col-md-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" id="filterTitle" name="title" value="@Model?.Title" placeholder="Search title...">
            </div>

            <div class="col-md-2">
                <label class="form-label">ISBN</label>
                <input type="text" class="form-control" id="filterISBN" name="isbn" value="@Model?.ISBN" placeholder="Search ISBN...">
            </div>

            <div class="col-md-2">
                <label class="form-label">Author</label>
                <input type="text" class="form-control" id="filterAuthor" name="author" value="@Model?.Author" placeholder="Search author...">
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="filterAvailableOnly" name="availableOnly" value="true" @(Model?.AvailableOnly == true ? "checked" : "")>
                    <label class="form-check-label">
                        Available Only
                    </label>
                </div>
            </div>

            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary">Filter</button>
                <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>

        </form>
    </div>
</div>
