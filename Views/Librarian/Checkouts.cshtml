@model List<GenLibrary.Dtos.LibrarianCheckoutDto>

@{
    ViewData["Title"] = "All Checkouts";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list-check"></i> All Current Checkouts</h2>
        <div>
            <a href="@Url.Action("CheckoutBook", "Librarian")" class="btn btn-success me-2">
                <i class="bi bi-plus-circle"></i> New Checkout
            </a>
            <a href="@Url.Action("Dashboard", "Librarian")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        var isSuccess = TempData["Success"] as bool? ?? false;
        <div class="alert @(isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table id="checkoutsTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Book Title</th>
                <th>Barcode</th>
                <th>Member</th>
                <th>Checkout Date</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var checkout in Model)
            {
                <tr class="@(checkout.IsOverdue ? "table-danger" : "")">
                    <td>@checkout.CheckoutId</td>
                    <td>@checkout.BookTitle</td>
                    <td>@checkout.Barcode</td>
                    <td>
                        @checkout.MemberName
                        <br /><small class="text-muted">@checkout.MemberEmail</small>
                    </td>
                    <td>@checkout.CheckoutDate.ToString("yyyy-MM-dd")</td>
                    <td>@checkout.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (checkout.IsOverdue)
                        {
                            <span class="badge bg-danger">Overdue</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@checkout.DaysLeft days left</span>
                        }
                    </td>
                    <td>
                        <form asp-action="MarkReturned" method="post" style="display:inline;">
                            <input type="hidden" name="checkoutId" value="@checkout.CheckoutId" />
                            <button type="submit" class="btn btn-sm btn-warning">
                                <i class="bi bi-box-arrow-in-left"></i> Return
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#checkoutsTable').DataTable({
                pageLength: 10,
                ordering: true,
                responsive: true,
                order: [[5, 'asc']]
            });
        });
    </script>
}
